{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2016",
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "lib": ["es2016", "ES2019", "DOM"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
