{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/payments/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "builder":"tsc",
    "tsConfigPath": "apps/payments/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/payments",
  "projects": {
    "payments": {
      "type": "application",
      "root": "apps/payments",
      "entryFile": "main",
      "sourceRoot": "apps/payments/src",
      "compilerOptions": {
        "tsConfigPath": "apps/payments/tsconfig.app.json"
      }
    },
    "mocks": {
      "type": "application",
      "root": "apps/mocks",
      "entryFile": "main",
      "sourceRoot": "apps/mocks/src",
      "compilerOptions": {
        "tsConfigPath": "apps/mocks/tsconfig.app.json"
      }
    },
    "activity": {
      "type": "application",
      "root": "apps/activity",
      "entryFile": "main",
      "sourceRoot": "apps/activity/src",
      "compilerOptions": {
        "tsConfigPath": "apps/activity/tsconfig.app.json"
      }
    },
    "transaction": {
      "type": "application",
      "root": "apps/transaction",
      "entryFile": "main",
      "sourceRoot": "apps/transaction/src",
      "compilerOptions": {
        "tsConfigPath": "apps/transaction/tsconfig.app.json"
      }
    }
  }
}